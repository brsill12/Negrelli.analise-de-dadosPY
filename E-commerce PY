valor_total = 180.0
quantidade_itens = 1
coupon_desconto = "DESC10"

if valor_total >=100 and quantidade_itens >1:
  print("Parabens, voce ganhou 10% de desconto comprando 2 produtos ou mais > 100 reais")
  valor_desconto = valor_total * 0.10
  valor_final = valor_total - valor_desconto
  print(f"valor do desconto: R${valor_desconto: .2f}")
  print(f"valor a pagar: R${valor_final: .2f}")

elif coupon_desconto == "DESC10":
  print("Parabens, voce ganhou 10% de desconto usando o cupom")
  valor_desconto = valor_total * 0.10
  valor_final = valor_total - valor_desconto
  print(f"valor do desconto: R${valor_desconto: .2f}")
  print(f"valor a pagar: R${valor_final: .2f}")

else:
  print(f"sem descontos! Total da compra: R$ {valor_total: .2f}")
